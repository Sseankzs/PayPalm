<!DOCTYPE html>
<html>
<head>
  <title>Merchant Checkout</title>
</head>
<body>
  <h1>Mock Checkout</h1>
  <ul>
    <% cart.forEach(item => { %>
      <li><%= item.name %> - RM<%= item.price %></li>
    <% }) %>
  </ul>
  <p>Total: RM<%= total %></p>

  <form action="/add-item" method="post">
    <button type="submit">Add Random Item</button>
  </form>
  
  <form action="/checkout" method="post">
    <button type="submit">Pay with Palm</button>
  </form>

  <form action="/register" method="post">
    <input name="user_id" placeholder="Enter user ID" required />
    <button type="submit">Register Palm</button>
  </form>
</body>
</html>
